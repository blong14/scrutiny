{
    log {
        output stdout
        format console
    }
}

scrutiny.local:8081 {
    encode zstd gzip
    route {
        mercure {
            publisher_jwt !ChangeMe!
            subscriber_jwt !ChangeMe!
            anonymous true
            ui true
        }
        handle_path /images/* {
            encode zstd gzip
		    root * /images
		    file_server
	    }
       handle_path /static/* {
            encode zstd gzip
		    root * /static
		    file_server
	    }
        reverse_proxy web:8080
        respond "Not Found" 404
    }
}
